<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:PrepPal.ViewModels"
             x:Class="PrepPal.Views.GroceryListPage"
             Title="Grocery List">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Item" Clicked="OnAddItemClicked" />
        <ToolbarItem Text="Clear Grocery List" Clicked="OnClearListClicked"/>
        <ToolbarItem Text="Clear Selected Groceries" Clicked="OnDeleteSelectedClicked"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.BindingContext>
        <viewModels:GroceryListViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding GroceryItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                        <CheckBox IsChecked="{Binding IsBought}" VerticalOptions="Center" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>