<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrepPal.Views.RecipeDetailPage">

    <StackLayout>
        <!-- Recipe Name -->
        <Label Text="{Binding SelectedRecipe.Name}" 
               FontSize="Large" 
               HorizontalOptions="Center" />

        <!-- Recipe Category -->
        <Label Text="{Binding SelectedRecipe.Category}" 
               FontSize="Medium" 
               HorizontalOptions="Center" />

        <!-- Ingredients Header -->
        <Label Text="Ingredients:" FontSize="Medium" />

        <!-- Ingredients List -->
        <Label Text="{Binding IngredientsText}" />

        <!-- Instructions Header -->
        <Label Text="Instructions:" FontSize="Medium" />

        <!-- Instructions List -->
        <Label Text="{Binding InstructionsText}" />
        
        <Button Text="Add Ingredients To Grocery List"
                BackgroundColor="Black"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="FillAndExpand" />
        
    </StackLayout>
</ContentPage>
