<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PrepPal"
             x:Class="PrepPal.Views.RecipeDetailPage"
             Title="RecipeDetailPage">
    
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="{Binding Name}" FontSize="Large" FontAttributes="Bold" />
            <Label Text="Ingredients" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="{Binding Ingredients}" />
            <Label Text="Instructions" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="{Binding Instructions}" />
        </StackLayout>
    </ScrollView>
</ContentPage>